<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SS} [%t] %-5level %logger{5} %marker - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console" />
    </Root>
    <Logger name="org.jmarkdownviewer" level="info">
      <AppenderRef ref="Console"/>
    </Logger>
    
  </Loggers>
</Configuration>